set encoding=utf-8
set fileencoding=utf-8

set number
hi LineNr ctermfg=76
hi CursorLineNr ctermfg=124
set cursorline
hi clear CursorLine

set nobackup
set noswapfile
set autoread
set showcmd
set wrapscan
set hlsearch
set noerrorbells
set showmatch matchtime=1
set cinoptions+=:0
set laststatus=2

set tabstop=2
set shiftwidth=2
set softtabstop=2
set autoindent
set smartindent

set list
set listchars=tab:≫-,trail:-,eol:↩︎,extends:≫,precedes:≪,nbsp:%

set backspace=indent,eol,start

set nowrap
set title

hi Comment ctermfg=3

syntax on
set mouse=a
set scrolloff=3
